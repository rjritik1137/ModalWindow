{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
    //    "airbnb",
        "react-app",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "react", "prettier", "react-hooks"
    ],
    "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
        "prettier/prettier": [
            "error",
            {
              "printWidth": 80,
              "trailingComma": "es5",
              "semi": false,
              "jsxSingleQuote": true,
              "singleQuote": true,
              "useTabs": true
            }
          ]
      
    }
}
