{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
        "plugin:react/recommended",
    //    "airbnb",
        "react-app",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "react",
        "prettier",
        "react-hooks",
        "@typescript-eslint"
    ],
    "rules": {
        "no-confusing-arrow": ["error", { "allowParens": false }],
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "error",
        "react/jsx-filename-extension":[1, { "extensions": [".jsx",".tsx"] }],
        "prettier/prettier": [
            "error",
            {
                "printWidth": 80,
                "trailingComma": "es5",
                "semi": false,
                "jsxSingleQuote": true,
                "singleQuote": true,
                "useTabs": true,
                "allowParens":true
            }
            ],
        "@typescript-eslint/explicit-function-return-type": [
            "error"
        ]
    }
}
